{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es2016", "dom"],
    "rootDir": "./src",
    "outDir": "./compile",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
